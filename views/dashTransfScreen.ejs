                <li class="nav-item">
                    <a class="nav-link" href="dashGastosScreen.ejs">Gastos Gerais</a>
                </li>
            </ul>
            <a href="#" data-toggle="modal" data-target="#myModal" id="btn exit btn-exit" class="btn btn-exit btn-outline-light">Sair</a>
        </div>
    </nav>

    <!-- Confirmação que é executada quando clica no botão Sair -->
    <div class="modal" id="myModal"> 
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" style="color: black;">Sair</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>                
                </div>
                <div class="modal-body" style="color: black;">
                    <p>Deseja realmente sair?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Não</button>
                    <button type="button" class="btn btn-secondary">Sim</button>
                </div>
            </div>
        </div>
    </div>
    

    <div class="heading">
        [Nome], confira suas transferências feitas durante o ano.
    </div>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12">
                <div id="container4"></div>
                <p style="color: rgb(17, 17, 71); font-size:1px;">.</p>
                <button id="inverted" class="btn btn-outline-light">Inverted</button>
                <button id="plain" class="btn btn-outline-light">Plain</button>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        var chart = Highcharts.chart('container4', {
            title: {
                text: 'Média de gastos mensais com transferências'
            },

            chart: {
                stacking: 'normal',
                borderRadius: 15
            },

            xAxis: {
                categories: ['Jan', 'Fev', 'Mar', 'Abr', 'Mai', 'Jun', 'Jul', 'Ago', 'Set', 'Out', 'Nov', 'Dez']
            },

            plotOptions: {
                column: {
                    stacking: 'normal',
                    borderRadius: 15
                }
            },

            series: [{
                name: 'R$',
                type: 'column',
                colorByPoint: true,
                data: [29.9, 71.5, 106.4, 129.2, 144.0, 176.0, 135.6, 148.5, 216.4],
                showInLegend: false
            }]
            });

            $('#plain').click(function() {
            chart.update({
                chart: {
                    inverted: false
                },
                subtitle: {
                    text: 'Vertical'
                }
            });
            });

            $('#inverted').click(function () {
            chart.update({
                chart: {
                    inverted: true
                },
                subtitle: {
                    text: 'Horizontal'
                }
            });            
        });                       
    </script>
    
</body>
